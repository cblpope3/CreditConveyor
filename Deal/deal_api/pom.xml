<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>ru.leonov</groupId>
		<artifactId>deal</artifactId>
		<version>0.0.1</version>
	</parent>

	<artifactId>deal_api</artifactId>
	<version>0.0.1</version>
	<name>Deal application api</name>
	<description>Classes generated from openapi-specification</description>

	<properties>
		<openapi.basePackage>ru.leonov.deal</openapi.basePackage>
		<openapi.inputSpec>../OpenApi/CreditConveyorApi.yaml</openapi.inputSpec>
		<api.generated.dir>${build.outputDirectory}/generated</api.generated.dir>
	</properties>

	<dependencies>

<!--		Openapi generator-->
		<dependency>
			<groupId>io.springfox</groupId>
			<artifactId>springfox-swagger2</artifactId>
			<version>${swagger.version}</version>
		</dependency>
		<dependency>
			<groupId>io.springfox</groupId>
			<artifactId>springfox-schema</artifactId>
			<version>${swagger.version}</version>
		</dependency>
		<dependency>
			<groupId>javax.validation</groupId>
			<artifactId>validation-api</artifactId>
			<version>2.0.1.Final</version>
		</dependency>
		<dependency>
			<groupId>org.hibernate.validator</groupId>
			<artifactId>hibernate-validator</artifactId>
			<version>6.0.13.Final</version>
		</dependency>

	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.openapitools</groupId>
				<artifactId>openapi-generator-maven-plugin</artifactId>
				<version>5.1.0</version>
				<executions>
					<execution>
						<id>openapi-generator</id>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<inputSpec>${openapi.inputSpec}</inputSpec>
							<generatorName>kotlin-spring</generatorName>
							<configOptions>
								<dateLibrary>java8</dateLibrary>
								<developerName>Leonov Nick</developerName>
								<developerOrganization>neoflex</developerOrganization>
								<developerOrganizationUrl>https://www.mockedsite.ru/</developerOrganizationUrl>
								<interfaceOnly>true</interfaceOnly>
								<apiPackage>${openapi.basePackage}.controller</apiPackage>
								<modelPackage>${openapi.basePackage}.dto</modelPackage>
								<openApiNullable>false</openApiNullable>
								<modelMutable>true</modelMutable>
								<enumPropertyNaming>UPPERCASE</enumPropertyNaming>
								<typeMappings>
<!--									TODO deal with datetime examples in swagger-->
									<typeMapping>date=java.time.LocalDate</typeMapping>
								</typeMappings>
							</configOptions>
							<additionalProperties>
								<additionalProperty>modelNameSuffix=DTO</additionalProperty>
							</additionalProperties>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
